<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303233"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:scaleType="fitXY"
        android:src="@drawable/signup_photo" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:background="@drawable/btn_app_info_update"
        android:text="편집"
        android:textColor="#DDDDDD"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_toRightOf="@+id/imageView1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="닉네임"
        android:textColor="#888888"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="17dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="닉네임이 머예요."
        android:textColor="#CCCCCC"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="ID"
        android:textColor="#888888" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="huray"
        android:textColor="#CCCCCC"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/list_line"  />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="생년월일"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="257dp"
            android:layout_height="28dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="1999년 09월 09일 (음력)"
            android:textColor="#CCCCCC"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/list_line"  />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="성별"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="257dp"
            android:layout_height="28dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="남자"
            android:textColor="#CCCCCC"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/list_line" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="이메일 정보"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="257dp"
            android:layout_height="28dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="huray@huray.net"
            android:textColor="#CCCCCC"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/list_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="257dp"
                android:layout_height="28dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="19dp"
                android:gravity="center_vertical"
                android:text="핸드폰 번호"
                android:textColor="#888888"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="51dp"
                android:layout_height="28dp"
                android:background="@drawable/myinfo_btn"
                android:text="변경"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/list_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="257dp"
                android:layout_height="28dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="19dp"
                android:gravity="center_vertical"
                android:text="비밀번호"
                android:textColor="#888888"
                android:textSize="15sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="51dp"
                android:layout_height="28dp"
                android:background="@drawable/myinfo_btn"
                android:text="변경"
                android:textColor="#FFFFFF"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/login_line" />
        
        <Button 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="로그아웃"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:scaleType="fitXY"
            android:background="@drawable/myinfo_btn"
            android:id="@+id/login"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            />
    </LinearLayout>

</RelativeLayout>