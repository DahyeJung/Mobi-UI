<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28292a"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/p1_relative"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/p1_imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p1_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/p1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="회원가입 시 등록한 정보로 아이디를 찾을 수 있습니다."
            android:textColor="#dddddd"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/p1_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1_tv1"
            android:layout_alignRight="@+id/p1_tv1"
            android:layout_below="@+id/p1_tv1"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_input"
            android:hint="이메일"
            android:padding="12dp"
            android:textColor="#dddddd" >
        </EditText>

        <TextView
            android:id="@+id/p1_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1_email"
            android:layout_alignRight="@+id/p1_email"
            android:layout_below="@+id/email"
            android:layout_marginTop="5dp"
            android:text="이메일을 입력해 주십시오."
            android:textColor="#888888"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="입력하신 정보와 일치하는 아이디가 없습니다."
            android:textColor="#dddddd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p2_tv1"
            android:layout_alignRight="@+id/p2_tv1"
            android:layout_below="@+id/p2_tv1"
            android:layout_marginTop="17dp"
            android:text="다시 한번 정확한 정보를 입력헤 주십시오." />

        <EditText
            android:id="@+id/p2_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p2_tv2"
            android:layout_alignRight="@+id/p2_tv2"
            android:layout_below="@+id/p2_tv2"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_input"
            android:hint="이메일"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="#dddddd" >
        </EditText>

        <RelativeLayout
            android:id="@+id/p2_relative"
            android:layout_width="360dp"
            android:layout_height="230dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/p2_imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p2_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/p2_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p2_OK"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="회원가입"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/p2_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/p2_signup"
                android:layout_below="@+id/p2_signup"
                android:text="아이디가 없으시면 회원가입을 해주세요."
                android:textColor="#888888"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p3_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="입력하신 정보와 일치하는 아이디 목록 입니다."
            android:textColor="#dddddd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p3_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p3_tv1"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_input"
            android:layout_alignLeft="@+id/p3_tv1"
            android:text="hur**"
            android:layout_marginRight="17dp"
            android:textColor="#95e1e2"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p3_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:background="@drawable/round_corner"
            android:layout_alignLeft="@+id/p3_tv2"
            android:layout_alignRight="@+id/p3_tv2"
            android:paddingBottom="18dp"
            android:paddingLeft="10dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp"
            android:layout_below="@+id/p3_tv2"
            android:gravity="center"
            android:text="개인정보 보호를 위해 끝자리는 *로 표기하였습니다."
            android:textColor="#666666"
            android:textSize="13sp" />

        <RelativeLayout
            android:id="@+id/p3_relative"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/p3_ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p3_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/login_btn_bg_over"
                android:text="아이디 뒷자리 확인하기"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/page4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p4_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="40dp"
            android:text="이메일로 아이디 정보를 발송하였습니다."
            android:textColor="#95e1e2"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/p4_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p4_tv1"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/p4_tv1"
            android:text="회원가입 시에 입력한 이메일 주소에서 확인해주세요."
            android:layout_marginRight="17dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/p4_relative"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/p4_ImageView01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p4_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/login_btn_bg_over"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>

    </RelativeLayout>
    
</FrameLayout>