<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/goldink_ic"
        android:layout_width="22dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/buy_ink_gold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/goldink_ic"
        android:gravity="left"
        android:text="2,000"
        android:textColor="#FECC49"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="13dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/tv1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv1"
        android:text="+"
        android:textColor="#51CAE1"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/blueink_ic"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/tv2"
        android:layout_toRightOf="@+id/tv2"
        android:src="@drawable/buy_ink_blue" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="47dp"
        android:layout_height="22dp"
        android:layout_alignBaseline="@+id/tv2"
        android:layout_alignBottom="@+id/tv2"
        android:layout_marginRight="24dp"
        android:layout_toRightOf="@+id/blueink_ic"
        android:text="100"
        android:textColor="#51CAE1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="127dp"
        android:layout_height="28dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/tv3"
        android:gravity="right"
        android:text="$ 1,99 USD"
        android:textColor="#CCCCCC"
        android:textSize="20sp" />

</RelativeLayout>