<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/menu_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/menu_left"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/country_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="8dp"
        android:text="조회순"
        android:gravity="center_vertical"
        android:textSize="19dp" />

    <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/country_title"
        android:layout_toRightOf="@+id/country_title"
        android:background="@drawable/filter_arrow" />

    <ImageButton
        android:id="@+id/menu_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:layout_alignTop="@+id/menu_left"
        android:background="@drawable/menu_right" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/menu_right"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@+id/menu_right"
        android:background="@drawable/search" />

</RelativeLayout>