<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#28292a"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p1_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="회원가입 시 등록한 정보로 비밀번호를 재설정 할 수 있습니다."
            android:textColor="#dddddd"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/p1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1_tv1"
            android:layout_alignRight="@+id/p1_tv1"
            android:layout_below="@+id/p1_tv1"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_input"
            android:hint="아이디"
            android:textColor="#dddddd"
            android:padding="13dp" />

        <TextView
            android:id="@+id/p1_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1_id"
            android:layout_below="@+id/p1_id"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:text="일치하는 아이디 정보가 없습니다."
            android:textColor="#ef4358"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/p1_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p1_id"
            android:layout_alignRight="@+id/p1_id"
            android:layout_below="@+id/p1_id"
            android:layout_marginTop="33dp"
            android:background="@drawable/login_input"
            android:hint="이메일"
            android:textColor="#dddddd"
            android:padding="13dp" />

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p1_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p2_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="입력하신 정보와 일치하는 비밀번호가 없습니다."
            android:textColor="#95e1e2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/p2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p2_tv1"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="17dp"
            android:text="다시 한번 정확한 정보를 입력해 주십시오."
            android:textColor="#dddddd"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/p2_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p2_tv2"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_input"
            android:hint="아이디"
            android:textColor="#dddddd" 
            android:padding="13dp"/>

        <EditText
            android:id="@+id/p2_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/p2_id"
            android:layout_alignRight="@+id/p2_id"
            android:layout_below="@+id/p2_id"
            android:layout_marginTop="33dp"
            android:background="@drawable/login_input"
            android:hint="이메일"
            android:textColor="#dddddd" 
            android:padding="13dp"/>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p2_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/p3_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="33dp"
            android:text="이메일로 비밀번호 정보를 발송하였습니다."
            android:textColor="#95e1e2"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/p3_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p3_tv1"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="17dp"
            android:text="회원가입 시에 입력한 이메일 주소에서 확인해주세요."
            android:textColor="#ffffff"
            android:textSize="17sp" />

         <TextView
            android:id="@+id/p3_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/p3_tv2"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="7dp"
            android:text="로그인 후 비밀번호를 재설정한 후에 사용하시기 바랍니다."
            android:textColor="#999999"
            android:textSize="15sp" />
         
         
        <RelativeLayout
            android:id="@+id/layout3"
            android:layout_width="360dp"
            android:layout_height="177dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/p3_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="로그인"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>