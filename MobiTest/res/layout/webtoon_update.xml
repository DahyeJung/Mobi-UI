<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303233"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="278dp"
        android:layout_height="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="17dp"
        android:text="업데이트 알림 받기"
        android:textColor="#CCCCCC"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_width="278dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/textView1"
        android:text="관심웹툰 중 선택한 작품의 최신 회차가 업데이트 되었을 때 알림을 받을 수 있습니다."
        android:textColor="#888888"
        android:textSize="13sp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/set_chkbox" 
        android:background="@null"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/list_line" 
       />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="327dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp"
        android:text="마이웹툰>관심웹툰 메뉴에서 개별 작품의 업데이트 알림을 선택할 수 있습니다."
        android:textColor="#888888"
        android:textSize="13sp" />

</RelativeLayout>