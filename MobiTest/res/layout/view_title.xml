<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@drawable/back_btn"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/favorBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/favor_btn_click"
        android:layout_alignTop="@+id/backBtn"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/alarmBtn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@+id/favorBtn"
        android:layout_toLeftOf="@+id/favorBtn"
        android:adjustViewBounds="true"
        android:background="@drawable/alarm_btn_click"
        android:scaleType="fitXY" />

</RelativeLayout>