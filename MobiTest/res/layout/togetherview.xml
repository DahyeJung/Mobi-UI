<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/page1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#28292a" >

        <TextView
            android:id="@+id/p1_top_tv1"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="함께"
            android:textColor="#DDDDDD"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/p1_top_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/p1_top_tv1"
            android:src="@drawable/menu_arrow" />

        <TextView
            android:id="@+id/p1_top_tv2"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/p1_top_img1"
            android:gravity="center"
            android:text="발송확인"
            android:textColor="#888888"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/p1_img1"
            android:layout_width="107dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/p1_top_tv1"
            android:layout_marginLeft="3dp"
            android:src="@drawable/chapter_list_img02" />

        <TextView
            android:id="@+id/p1_tv1"
            android:layout_width="149dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/p1_img1"
            android:text="천년 구미호"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/p1_tv2"
            android:layout_width="149dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/p1_tv1"
            android:layout_below="@+id/p1_tv1"
            android:text="글/그림"
            android:textColor="#888888"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/p1_tv3"
            android:layout_width="76dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/p1_tv2"
            android:layout_below="@+id/p1_tv2"
            android:text="8화"
            android:textColor="#DDDDDD"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/p1_tv4"
            android:layout_width="236dp"
            android:layout_height="31dp"
            android:layout_below="@+id/p1_img1"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="함께보기 친구선택"
            android:textColor="#DDDDDD"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/p1_searchId"
            android:layout_width="236dp"
            android:layout_height="40dp"
            android:layout_below="@+id/p1_tv4"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/login_idpw_input"
            android:gravity="center"
            android:hint="아이디 또는 닉네임을 입력하세요." />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/p1_searchId"
            android:layout_marginRight="17dp"
            android:layout_toRightOf="@+id/p1_searchId"
            android:background="@drawable/sign_up_code_btn"
            android:gravity="center"
            android:text="검색"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/p1_searchId"
            android:background="#323334" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/login_line" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignBottom="@+id/p1_searchId"
            android:layout_alignRight="@+id/p1_searchId"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/text_delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#28292a" >

        <TextView
            android:id="@+id/p2_top_tv1"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="함께보기 친구선택"
            android:textColor="#DDDDDD"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/p2_top_tv2"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/p2_top_img1"
            android:gravity="center"
            android:text="발송확인"
            android:textColor="#888888"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/p2_img1"
            android:layout_width="107dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/p2_top_tv1"
            android:src="@drawable/chapter_list_img02" />

        <TextView
            android:id="@+id/p2_tv1"
            android:layout_width="149dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/p2_img1"
            android:text="천년 구미호"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/p2_tv2"
            android:layout_width="149dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/p2_tv1"
            android:layout_below="@+id/p2_tv1"
            android:text="글/그림"
            android:textColor="#888888"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/p2_tv3"
            android:layout_width="76dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/p2_tv2"
            android:layout_below="@+id/p2_tv2"
            android:text="8화"
            android:textColor="#DDDDDD"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/to"
            android:layout_width="20dp"
            android:layout_height="31dp"
            android:layout_below="@+id/p2_img1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:text="To."
            android:textColor="#DDDDDD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="40dp"
            android:layout_height="31dp"
            android:layout_below="@+id/p2_img1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/to"
            android:text="김개똥"
            android:textColor="#DDDDDD"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="180dp"
            android:layout_height="31dp"
            android:layout_alignTop="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:gravity="center_vertical"
            android:text="huray"
            android:textColor="#95e1e2"
            android:textSize="15sp" >
        </TextView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="327dp"
            android:layout_height="136dp"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/gift_confirm_bg" />

        <ImageView
            android:id="@+id/icon_together"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_together_confirming" />

        <TextView
            android:id="@+id/p2_tv1"
            android:layout_width="298dp"
            android:layout_height="21dp"
            android:layout_below="@+id/icon_together"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="천년 구미호 8화를 김길동 님과"
            android:textColor="#95e1e2"
            android:textSize="15sp" />

        <TextView
            android:layout_width="298dp"
            android:layout_height="21dp"
            android:layout_below="@+id/p2_tv1"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="함께 봅니다."
            android:textColor="#DDDDDD"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="취소"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/cancel"
                android:layout_alignBottom="@+id/cancel"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cancel"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/cancel"
                android:background="@drawable/login_btn_bg"
                android:text="함께보기"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/p2_top_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/p2_top_tv1"
            android:src="@drawable/menu_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/page3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#28292a" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#111111" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="김길동 님에게 함께보기가 발송되었습니다."
                android:textColor="#95e1e2"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/p3_top_tv1"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="함께보기 친구선택"
            android:textColor="#DDDDDD"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/p3_top_img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/p3_top_tv1"
            android:src="@drawable/menu_arrow" />

        <TextView
            android:id="@+id/p3_top_tv2"
            android:layout_width="165dp"
            android:layout_height="38dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/p3_top_img1"
            android:gravity="center"
            android:text="발송확인"
            android:textColor="#888888"
            android:textSize="13sp" />
        
           <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#323334" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/login_line" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/login_btn_bg"
                android:text="계속 감상"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/cancel"
                android:layout_alignBottom="@+id/cancel"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cancel"
                android:layout_marginRight="17dp"
                android:layout_toRightOf="@+id/cancel"
                android:background="@drawable/login_btn_bg"
                android:text="모비툰 홈"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />
        </RelativeLayout>
        
        
        
    </RelativeLayout>


</FrameLayout>