<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:scaleType="fitXY"
        android:src="@drawable/chapter_list_img" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1"
        android:background="#111111"
        android:paddingLeft="20dp"
        android:text="작품소개"
        android:textColor="#D6D6D6"
        android:textSize="12sp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_toRightOf="@+id/Relativelayout1"
        android:dividerHeight="0px" >
    </ListView>

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:background="#111111"
        android:paddingLeft="20dp"
        android:text="첫회보기"
        android:textColor="#D6D6D6"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/button1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/toon_info" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_above="@+id/listview"
        android:layout_toRightOf="@+id/button2"
        android:background="#111111"
        android:paddingLeft="20dp"
        android:text="임시저장"
        android:textColor="#D6D6D6"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_above="@+id/listview"
        android:layout_toRightOf="@+id/button3"
        android:background="#111111"
        android:paddingLeft="20dp"
        android:text="선물하기"
        android:textColor="#D6D6D6"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="11dp"
        android:src="@drawable/download" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_marginLeft="12dp"
        android:src="@drawable/first_chap" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:background="#99000000" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:paddingLeft="17dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginBottom="4dp"
            android:paddingLeft="17dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="17dp"
            android:text="9.0"
            android:textColor="#51CAE1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="13dp"
            android:layout_alignTop="@+id/textView2"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/textView2"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/rate_9" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Relativelayout1"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@android:id/list" >

        <ImageButton
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="214dp"
            android:background="@drawable/listview_top_btn" />

        <ImageButton
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:background="@drawable/listview_botton_btn" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ImageView6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="11dp"
        android:src="@drawable/gift" />

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/imageView4"
        android:src="@drawable/btn_divider" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignTop="@+id/imageView5"
        android:src="@drawable/btn_divider" />

    <ImageView
        android:id="@+id/ImageView03"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/button3"
        android:layout_alignTop="@+id/ImageView01"
        android:src="@drawable/btn_divider" />

</RelativeLayout>